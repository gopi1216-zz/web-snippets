{
  "HTML boilerplate code": {
    "prefix": "!!",
    "body": [
      "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n\t<meta charset=\"UTF-8\">\n\t<meta name=\"viewport\" content= \"width=device-width, initial-scale=1.0, shrink-to-fit=no\">\n\t<meta http-equiv=\"X-UA-Compatible\" content=\"ie=edge\">\n\t<meta http-equiv=\"Cache-Control\" content=\"no-cache\">\n\t<meta http-equiv=\"expires\" content=\"0\">\n\t<meta http-equiv=\"Pragma\" content=\"no-cache\">\n\t<title>${1:Document}</title>\n\t<link rel=\"stylesheet\" href=\"styles/style.css\" />\n</head>\n<body>\n\t<h1>${2:heading}</h1>\n</body>\n</html>"
    ]
  },
  "Primary button": {
    "prefix": "b:p",
    "body": "<button type=\"button\" class=\"btn btn-primary\" id=\"${1:btnSubmit}\" data-i18n=\"${2:btn.label.submit}\"></button>"
  },
  "Secondary button": {
    "prefix": "b:s",
    "body": "<button type=\"button\" class=\"btn btn-secondary\" id=\"${1:btnCancel}\" data-i18n=\"${2:btn.label.cancel}\"></button>"
  },
  "Image": {
    "prefix": "im",
    "body": "<img src=\"${1:src}\" alt=\"${2:alt text}\" />"
  },
  "Empty Anchor tag": {
    "prefix": "a",
    "body": "<a href=\"javascript:;\" role=\"button\"></a>"
  },
  "Text field": {
    "prefix": "in",
    "body": "<input type=\"text\" placeholder=\"${1:Name}\" />"
  },
  "Email field": {
    "prefix": "in:e",
    "body": "<input type=\"email\" placeholder=\"${1:Email}\" />"
  },
  "Number field": {
    "prefix": "in:n",
    "body": "<input type=\"number\" placeholder=\"${1:Number}\" />"
  },
  "Password field": {
    "prefix": "in:p",
    "body": "<input type=\"password\" placeholder=\"${1:Password}\" required />"
  },
  "Modal Content": {
    "prefix": "bs-modal",
    "body": "<div class=\"modal-dialog\" role=\"document\">\n\t<div class=\"modal-content\">\n\t<div class=\"modal-header\">\n\t<h5 class=\"modal-title\">${1:Modal title}</h5></div>\n<div class=\"modal-body\">${2:Modal body}</div>\n<div class=\"modal-footer\"></div>\n</div>\n</div>"
  }
}