{
  "No Border": {
    "prefix": "bn",
    "body": "border: none;"
  },
  "Center the element": {
    "prefix": "ma",
    "body": "margin: 0 auto;"
  },
  "Left-Right border": {
    "prefix": "bx",
    "body": "border-left: ${1:1px} solid ${2:#000};\nborder-right: ${3:1px} solid ${4:#000};"
  },
  "Top-Bottom border": {
    "prefix": "by",
    "body": "border-top: ${1:1px} solid ${2:inherit};\nborder-bottom: ${3:1px} solid ${4:inherit};"
  },
  "Left-Right padding": {
    "prefix": "px",
    "body": "padding: 0 ${1:1rem};"
  },
  "Top-Bottom padding": {
    "prefix": "py",
    "body": "padding: ${1:1rem} 0;"
  },
  "Left-Right margin": {
    "prefix": "mx",
    "body": "margin: 0 ${1:1rem};"
  },
  "Top-Bottom margin": {
    "prefix": "my",
    "body": "margin: ${1:1rem} 0;"
  },
  "Remove outline": {
    "prefix": "oln",
    "body": "outline: none;"
  },
  "Remove float": {
    "prefix": "fln",
    "body": "float: none;"
  },
  "Box shadow": {
    "prefix": "bs",
    "body": "box-shadow: ${1:0} ${2:0} ${3:0} rgba(0, 0, 0, ${4:0.1});"
  },
  "Remove Box shadow": {
    "prefix": "bs:n",
    "body": "box-shadow: none;"
  },
  "Box sizing": {
    "prefix": "bz",
    "body": "box-sizing: border-box;"
  }
}